{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "strictPropertyInitialization": false,
        "baseUrl": "./src",
        "paths": {
            "@application/*": [
                "application/*"
            ],
            "@core/*": [
                "core/*"
            ],
            "@configurations/*": [
                "configurations/*"
            ],
            "@infrastructure/*": [
                "infrastructure/*"
            ],
            "@shared/*": [
                "shared/*"
            ]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "lib": [
            "ESNext"
        ],
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
